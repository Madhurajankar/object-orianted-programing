


#include <iostream>
using namespace std;

class Distance {
public:
    int feet, inch;

    // Constructor
    Distance(int f, int i) {
        feet = f;
        inch = i;
    }

    // Operator overloading for decrement (-)
    void operator-() {
        feet--;
        inch--;
        cout << "\nFeet & Inches (After Decrement): "
             << feet << " feet " << inch << " inches" << endl;
    }
};

