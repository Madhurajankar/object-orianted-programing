    cout << "Name:Divya Appaso Bagal\n";
    cout << "Roll No: 101\n";
    cout << "Division: S.Y.B CSE\n";

    Distance d1(8, 9); // Create object
    cout << "Initial Distance: " << d1.feet << " feet " << d1.inch << " inches" << endl;

    -d1; // Call overloaded operator

    return 0;
}
